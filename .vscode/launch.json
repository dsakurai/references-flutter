{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "server",
            "type": "dart",
            "request": "launch",
            "program": "bin/server.dart",
            "cwd": "${workspaceFolder}/server"
        },
        {
            "name": "webapp (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "cwd": "${workspaceFolder}/webapp",
            "deviceId": "web-server",
            "toolArgs": ["--web-port", "8081"]
        },
        {
            "name": "webapp (debug mode)",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}/webapp",
            "deviceId": "web-server",
            "toolArgs": ["--web-port", "8081"]
        },
        {
            "name": "webapp (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "cwd": "${workspaceFolder}/webapp",
            "deviceId": "web-server",
            "toolArgs": ["--web-port", "8081"]
        },
    ]
}